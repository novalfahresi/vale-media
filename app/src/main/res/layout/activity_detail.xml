<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="256dp">
        
        <ImageView
            android:id="@+id/iv_backdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/deep_sea"/>

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:scaleType="centerCrop"
            android:src="@drawable/round_keyboard_arrow_left_24"
            android:background="@color/kimberly"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_favorite"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:padding="6dp"
            app:tint="@color/deep_sea"
            android:src="@drawable/round_favorite_border_24"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:background="@color/semi_transparent"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-48dp">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="120dp"
            android:layout_height="182dp"
            android:layout_marginStart="24dp"
            android:scaleType="centerCrop"
            android:background="@color/kimberly"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUDUL"
            android:layout_toEndOf="@id/iv_poster"
            android:layout_marginStart="24dp"
            android:layout_marginTop="64dp"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00 January 0000"
            android:layout_below="@id/tv_title"
            android:layout_toEndOf="@id/iv_poster"
            android:layout_marginStart="24dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_below="@id/tv_date"
            android:layout_toEndOf="@id/iv_poster"
            android:layout_marginStart="24dp"
            android:textStyle="italic"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"/>


</LinearLayout>